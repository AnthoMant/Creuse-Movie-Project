import pandas as pd
import numpy as np

#IMPORTATION DE LA DATASET

df_name_basics = pd.read_csv('https://datasets.imdbws.com/name.basics.tsv.gz', sep='\t')

#CONVERTION DES LISTES DE TITRES POUR LES ACTEURS EN str

df_name_basics['knownForTitles_list'] = df_name_basics['knownForTitles'].str.split(",")

#SEPARATION DES TITRES DE LA COLONNES 'knownForTitles_list'

df_name_basics = df_name_basics.explode('knownForTitles_list')

#SUPPRESSION DE LA COLONNE 'knownForTitles'

df_name_basics=df_name_basics.drop(['knownForTitles'], axis = 1)


